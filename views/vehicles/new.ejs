<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Write A New Review</h1>
        <div style="width:30%; margin: 25px auto;">
    <form action="/vehicles" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="make" placeholder="Make">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="model" placeholder="Model">
        </div>
<!--        <div class="form-group">
            <input class="form-control" type="text" name="transmission" placeholder="Transmission Type">
        </div>-->
        <select class="form-group" name="transmission">
            <option class="form-control" value = "Automatic" selected>Automatic</option>
            <option class="form-control" value = "Manual">Manual</option>
        </select>
         <select class="form-group" name="fuel_type">
            <option class="form-control" value = "Petrol" selected>Petrol</option>
            <option class="form-control" value = "Diesel">Diesel</option>
        </select>
        <select class="form-group" name="year">
            <option class="form-control" value = "2010" selected>2010</option>
            <option class="form-control" value = "2011">2011</option>
            <option class="form-control" value = "2012">2012</option>
            <option class="form-control" value = "2013">2013</option>
            <option class="form-control" value = "2014">2014</option>
            <option class="form-control" value = "2015">2015</option>
            <option class="form-control" value = "2016">2016</option>
            <option class="form-control" value = "2017">2017</option>
            <option class="form-control" value = "2018">2018</option>
        </select>
        
        
<!--        <div class="form-group">
            <input class="form-control" type="text" name="fuel_type" placeholder="Fuel Type">
        </div>-->
        <div class="form-group">
            <input class="form-control" type="number" name="price" placeholder="Price" min="0" step="1000">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="Image URL">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="dDscription">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
        </div>
    </form>
    <a href="/vehicles">Go Back</a>
    </div>
    </div>
</div>
<% include ../partials/footer %>