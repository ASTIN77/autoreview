<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <!--<p class="lead">AutoReview</p>-->
            <div class="list-group">
                <li class="list-group-item active"><h4><%= vehicle.make %> <%= vehicle.model %></h4></li>
                <li class="list-group-item well">
                    <h4>Cost         : £<%= vehicle.price %></h4>
                    <h4>Transmission : <%= vehicle.transmission %></h4>
                    <h4>Fuel Type    : <%= vehicle.fuel_type %></h4>
                    <h4>Year         : <%= vehicle.model_year %></h4>
                    </li>
            </div>
        </div>
       <div class="col-md-9">
                   <div class="thumbnail">
                      <img class="image-responsive" src="<%= vehicle.image %>">
                      <div class="caption">
                          <h4 class="pull-right">£<%= vehicle.price %></h4>
                          <h4><a><%= vehicle.make %> <%= vehicle.model %></a></h4>
                          <p><%= vehicle.description %></p>
                          <p><em><strong>Submitted By <%= vehicle.author.username %></strong></em></p>
                          <% if(currentUser && vehicle.author.id.equals(currentUser._id)){ %>
                              <a class = "btn btn-warning btn-xs" href="/vehicles/<%= vehicle._id %>/edit">Edit</a>
                              <form class="deleteForm" action="/vehicles/<%= vehicle._id %>?_method=DELETE" method="POST">
                                  <button class="btn btn-danger btn-xs">Delete</button>
                              </form>
                              <% } %>
                      </div>
                   </div>
                   <div class="well">
                       <div class="text-right">
                           <a class="btn btn-success" href="/vehicles/<%= vehicle._id %>/comments/new">Add New Comment</a>
                        </div>
                        <hr>
                           <% vehicle.comments.forEach(function(comment){ %>
                            <div class=row>
                                <div class="col-md-12">
                                    <strong><%= comment.author.username %></strong>
                                    <span class="pull-right">10 days ago</span>
                                    <p><%= comment.text %></p>
                                    <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                        <a class="btn btn-xs btn-warning" href="/vehicles/<%= vehicle._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                        <form class="deleteForm" action="/vehicles/<%= vehicle._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                        <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                        <a href="/vehicles/<%= vehicle._id %>" class="btn btn-primary">Search</a>
                                        </form>
                                        <% } %>
                                </div>
                            </div>
                            <% }); %>
                    </div>
               </div> 
        </div>
</div>




<% include ../partials/footer %>