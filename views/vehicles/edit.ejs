<h1>EDIT PAGE</h1>


<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= vehicle.name %></h1>
        <div style="width:30%; margin: 25px auto;">
    <form action="/vehicles/<%= vehicle._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="vehicle[name]" value="<%= vehicle.make %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="vehicle[name]" value="<%= vehicle.model %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="vehicle[name]" value="<%= vehicle.transmission %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="vehicle[name]" value="<%= vehicle.fuel_type %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="vehicle[price]" value="<%= vehicle.price %>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="vehicle[image]" value="<%= vehicle.image %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="vehicle[description]" value="<%= vehicle.description %>">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
        </div>
    </form>
    <a href="/vehicles">Go Back</a>
    </div>
    </div>
</div>
<% include ../partials/footer %>